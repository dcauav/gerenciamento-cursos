<% if(course.active_Cour == true || course.active_Cour == 1) { %>
    <div class="flex justify-center" id="<%- course.id_Cour %>">
        <div class="max-w-sm w-full rounded-lg bg-white shadow-lg flex flex-col justify-between">
            <a class="h-[65%] w-full object-cover" href="/cursos/info/id=<%- course.id_Cour %>">
                <img class="rounded-t-lg bg-center object-cover h-full w-full" src="<%- course.image_Cour %>" alt="" />
            </a>
            <div class="flex h-[35%] flex-col py-4 px-4 text-center justify-between">
                <h5 class="h-full max-w-full mb-2 text-lg font-medium text-gray-900 truncate"><%- course.name_Cour %></h5>
                
                <a class="rounded-md bg-blue-600 py-2 px-12 uppercase text-white hover:bg-blue-500 active:bg-blue-700" href="/cursos/info/id=<%- course.id_Cour %>">ver mais</a>
            </div>
        </div>
    </div>
<% } %>

<% if(course.active_Cour == false || course.active_Cour == 0) { %>
    <div class="flex justify-center opacity-50" id="<%- course.id_Cour %>">
        <div class="max-w-sm w-full rounded-lg bg-white shadow-lg flex flex-col justify-between">
            <a class="h-[65%] w-full object-cover" href="/cursos/info/id=<%- course.id_Cour %>">
                <img class="rounded-t-lg bg-center object-cover h-full w-full" src="<%- course.image_Cour %>" alt="" />
            </a>
            <div class="flex h-[35%] w-full flex-col py-4 px-4 text-center justify-between">
                <h5 class="h-full max-w-full mb-2 text-lg font-medium text-gray-900 truncate"><%- course.name_Cour %></h5>
                
                <a class="rounded-md bg-blue-600 py-2 mt-auto px-12 uppercase text-white hover:bg-blue-500 active:bg-blue-700" href="/cursos/info/id=<%- course.id_Cour %>">ver mais</a>
            </div>
        </div>
    </div>
<% } %>